@baseUrl = http://localhost:8081/api/v1

# トークン生成: make token
@token = YOUR_TOKEN_HERE

### 台本行一覧取得
GET {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines
Authorization: Bearer {{token}}

### 台本行追加（先頭に挿入）
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "speakerId": "YOUR_SPEAKER_ID_HERE",
  "text": "新しいセリフです"
}

### 台本行追加（指定行の後に挿入）
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "speakerId": "YOUR_SPEAKER_ID_HERE",
  "text": "挿入するセリフです",
  "afterLineId": "YOUR_LINE_ID_HERE"
}

### 台本行追加（感情付き）
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "speakerId": "YOUR_SPEAKER_ID_HERE",
  "text": "感情付きのセリフです",
  "emotion": "嬉しそうに",
  "afterLineId": "YOUR_LINE_ID_HERE"
}

### 台本を AI で生成
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/generate
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "prompt": "今日の天気について楽しく話す",
  "durationMinutes": 3
}

### 台本を AI で生成（durationMinutes 省略）
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/generate
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "prompt": "プログラミングの楽しさについて初心者にわかりやすく解説する"
}

### 台本を AI で生成（感情付き）
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/generate
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "prompt": "今日の天気について楽しく話す",
  "durationMinutes": 3,
  "withEmotion": true
}

### 台本テキスト取り込み
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/import
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "text": "太郎: こんにちは\n花子: やあ"
}

### 台本テキスト出力
GET {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/export
Authorization: Bearer {{token}}

### 台本行更新（テキストのみ）
PATCH {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "text": "新しいセリフ"
}

### 台本行更新（感情のみ）
PATCH {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "emotion": "笑いながら"
}

### 台本行更新（テキストと感情）
PATCH {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "text": "新しいセリフ",
  "emotion": "笑いながら"
}

### 台本行更新（感情削除）
PATCH {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "emotion": ""
}

### 台本行削除
DELETE {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE
Authorization: Bearer {{token}}

### 台本行並び替え
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/reorder
Authorization: Bearer {{token}}
Content-Type: application/json

{
  "lineIds": ["LINE_ID_1", "LINE_ID_2", "LINE_ID_3"]
}

### 台本行の音声を生成
POST {{baseUrl}}/channels/YOUR_CHANNEL_ID_HERE/episodes/YOUR_EPISODE_ID_HERE/script/lines/YOUR_LINE_ID_HERE/audio/generate
Authorization: Bearer {{token}}
